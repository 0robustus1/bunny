#!/usr/bin/env sh

sudo apt-get -y purge rabbitmq-server

VERSION="3.6.0"
TARBALL="rabbitmq-server-generic-unix-$VERSION.tar.xz"
TARGET="$HOME/rabbitmq"

rm -rf $TARGET

cd $HOME
wget -O $TARBALL "http://www.rabbitmq.com/releases/rabbitmq-server/v$VERSION/$TARBALL"
tar xf $TARBALL

ln -s "rabbitmq_server-$VERSION" $TARGET
cd $TARGET

SBIN="$HOME/rabbitmq/sbin"
export PATH=$SBIN:$PATH

$SBIN/rabbitmq-server &
sleep 3
$SBIN/rabbitmqctl status
echo "Started RabbitMQ under $TARGET"
